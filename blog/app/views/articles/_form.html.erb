<!-- Link to articles -->
<!-- articles_path = /articles -->
<div class="row">
  <div class='col-xs-12'>
    
        <!-- If there are any errors adding "@article",  -->
        <% if @article.errors.any? %>
          <h2>The following errors prevented the article from being created:</h2>
          <!--For each full message,  -->
          <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <!--Display the error message -->
            <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
              <!--Displays "title" -->
              <%= f.label :title %> 
          </div>
          <div class="col-sm-8">
              <!--Displays input box, ":title" grabs from  -->
              <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>    
          </div>
       </div>
    
       <div class="form-group">
          <div class="control-label col-sm-2">
              <!--Displays "Description" -->
              <%= f.label :description %> 
         </div>
          <div class="col-sm-8">
              <!--Displays input box -->
              <%= f.text_area :description, rows: 10, class:"form-control", placeholder: "Body of article" %> 
         </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10 col-xs-offset-2">
            <!--Creates a submit button -->
            <%= f.submit class:"btn btn-primary btn-lg" %> 
        </div>
      </div>
    
    <div class="col-xs-4 col-xs-offset-4 text-center">
      [ <%= link_to "All Articles", articles_path %> ]
   </div> 



        <% end %>

   </div>
</div>

